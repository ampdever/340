<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

    <%- messages() %>
    <% if (errors) { %>
        <ul class="notice">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul>
      <% } %>

    <p>All fields are required</p>
    <form class="registerInformation" action="/account/register" method="post">
        <label for="account_firstname">First name:</label>
        <input type="text" id="account_firstname" name="account_firstname" required>

        <label for="account_lastname">Last name:</label>
        <input type="text" id="account_lastname" name="account_lastname" required>

        <label for="account_email">Email Address:</label>
        <input type="email" id="account_email" name="account_email" required>

        <label for="account_password">Password:</label>
        <input type="password" id="account_password" name="account_password" required
        pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">

        <p>Passwords must be minimum of 12 characters and include 1 capital letter, 1 number, and 1 special character.</p>
        
        <button type="button" id="showPasswordButton">Show Password</button>
        <button type="submit" value="submit">Register</button>
    </form>
    
