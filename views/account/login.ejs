<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

    <%- messages() %>

    <form class="formInformation">
        <label for="account_email">Email: </label>
        <input type="email" id="account_email" name="account_email" required>
        
        <label for="account_password">Password: </label>
        <input type="password" id="account_password" name="account_password" required
        pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        
        <p>Passwords must be a minimum of 12 characters and include 1 capital letter, 1 number, and 1 special character.</p>
        
        <button type="button" id="showPasswordButton">Show Password</button>
        <button type="submit" value="submit">Login</button>
        <p>No account?<a href="/account/register">Sign-up</a></p>
    </form>
    
